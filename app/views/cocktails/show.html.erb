<div class="container">
  <h3><%= @cocktail.name %></h3>

  <%= cl_image_tag @cocktail.photo.key, height: 200, width: 300, crop: :fill %>
  <ul>
    <% @cocktail.doses.each do |dose| %>
      <li><%= dose.description %> - <%= dose.ingredient.name%>
      <%= link_to raw('<i class="far fa-trash-alt fa-lg"></i>'), 
        dose_path(dose),
        method: :delete,
        data: { confirm: "Delete #{dose.ingredient.name}?" } %></li> 
    <% end %>
  </ul>

  <%= simple_form_for(@cocktail) do |f| %>
    <%= f.input :photo %>
  <%= f.submit %>
<% end %>

  <%= link_to 'Create Dose',  new_cocktail_dose_path(@cocktail) %>

  <%= link_to raw('<i class="far fa-trash-alt fa-lg"></i>'), 
        cocktail_path(@cocktail),
        method: :delete,
        data: { confirm: "Delete #{@cocktail.name}?" } %>

</div>
