  <body>
    <div class="navbar">
      <div><%= link_to raw('<i class="fas fa-cocktail"></i>'), root_path %></div>
      <div><%= button_to "Add New Cocktail", new_cocktail_path, method: :get %></div>
    </div>

    <%= yield %>
  </body>
